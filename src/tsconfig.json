{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outFile": "../public/scripts/oscillate.js"
    },
    "exclude": [
        "node_modules",
        "typings/browser",
        "typings/browser.d.ts"
    ],
    "compileOnSave": true,
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "typings/three.ts",
        "typings/threejs/three.d.ts",
        "view/SceneRenderer.ts",
        "model/Particle.ts",
        "model/World.ts",
        "model/Wave.ts",
        "model/Waves.ts",
        "main/AudioInput.ts",
        "main/WaveManager.ts"
    ]
}
